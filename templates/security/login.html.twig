{% extends 'base.html.twig' %}

{% block title %}Shop index{% endblock %}

{% block body %}
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Connexion</h1>
            </div>
        </div>
    </header>

    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Connectez-vous pour accéder à toutes les fonctionnalités de Click&Go</h1>

                <div class="mb-3">
                    <label class="form-label" for="inputEmail">Email</label>
                    <input class="form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="inputPassword">Password</label>
                    <input class="form-control" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>


                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button>

                <span>Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">Incrivez-vous ici</a></span>
            </form>

        </div>
    </section>
{% endblock %}